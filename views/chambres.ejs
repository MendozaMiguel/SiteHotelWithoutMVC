<!DOCTYPE html>
<html lang=”fr”>

<% include squelette/header.ejs %>
<body>

<div class="container admin">
    <div class="row">
      <ul>
      <li><a href="/">Accueil</a></li>
      </ul>
        <h1><strong>Liste des items</strong><a href="/admin/ajouter" class="btn btn-success btn-lg"><span class="glyphicon glyphicon-plus"></span>Ajouter</a></h1>
        <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <th>Nom</th>
            <th>Description</th>
            <th>Prix</th>
            <th>Catégorie</th>
            <th>Actions</th>
            </thead>
            <% result.forEach(function(item){ %>
            <tr>
                <td><%= item.name %></td>
                <td><%= item.description %></td>
                <td><%= item.price%></td>
                <td><%= item.category %></td>
                <td width=200>
                    <a class="btn btn-default" href="admin/voir/<%= item.id %>"><span class="glyphicon glyphicon-eye-open"></span>Voir</a>
                    <a class="btn btn-primary" href="/admin/<%= item.id %>"><span class="glyphicon glyphicon-pencil"></span>Modifier</a>
                    <form action="/admin/<%= item.id %>" method="post">
                      <input type="hidden" name="_method" value="delete"/>
                      <button type="submit" class="btn btn-danger">Effacer</button>
                    </form>
                </td>
            </tr>
            <%}) %>
        </table>
                </div>
    </div>
</div>


<% include squelette/footer.ejs %>

</body>
</html>
