<!DOCTYPE html>
<html lang=”fr”>

<% include squelette/header.ejs %>
<body>

<div class="container">
    <div class="jumbotron">
        <h2>Modifier Produit</h2>
    </div>
    <% result.forEach(function(item){ %>



    <form role="form" action="/admin/<%=item.id%>" method="post">
        <input type="hidden" name="_method" value="put"/>
        <div class="form-group">
            <label for="fname">Name:</label>
            <input type="text" class="form-control" id="fname" name="fname" value="<%= item.name%>" required>
        </div>

        <div class="form-group">
            <label for="lname">Description:</label>
            <input type="text" class="form-control" id="lname" name="lname" value="<%= item.description %>" required>
        </div>

        <div class="form-group">
            <label for="email">Prix:</label>
            <input type="number" class="form-control" id="email" name="email" value="<%= item.price%>" required>
        </div>

        <div class="form-group">
            <label for="fichier">Choisir l'image:</label>
            <input type="file"  id="fichier" name="fichier" value="<%= item.image%>">
        </div>

        <div class="form-group">
            <label for="phone">Categorie:</label>
            <input type="number" class="form-control" id="phone" name="phone" value="<%= item.category %>">
        </div>

        <button type="submit" class="btn btn-default">Submit</button>
        <a href="/admin">Retour</a>
    </form>
    <%}) %>
</div>


<% include squelette/footer.ejs %>

</body>
</html>
